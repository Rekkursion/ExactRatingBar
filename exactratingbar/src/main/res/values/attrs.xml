<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="ExactRatingBar">
        <!-- the number of stars -->
        <attr name="stars_num" format="integer" />
        <!-- the default value of stars -->
        <attr name="stars_value" format="float" />
        <!-- the minimum value of stars -->
        <attr name="min_stars_value" format="float" />
        <!-- the maximum value of stars -->
        <attr name="max_stars_value" format="float" />
        <!-- gravity -->
        <attr name="gravity" format="flags">
            <flag name="top" value="1" />
            <flag name="center_vertical" value="2" />
            <flag name="bottom" value="4" />
            <flag name="left" value="8" />
            <flag name="center_horizontal" value="16" />
            <flag name="right" value="32" />
            <flag name="center" value="18" />
        </attr>
        <!-- the spacing of each star -->
        <attr name="spacing" format="float" />
        <!-- the style of stars -->
        <attr name="star_style" format="enum">
            <enum name="star" value="0" />
            <enum name="circle" value="1" />
            <enum name="square" value="2" />
            <enum name="triangle" value="3" />
            <enum name="rhombus" value="4" />
            <enum name="diamond" value="5" />
        </attr>
        <!-- the rendering size of each star -->
        <attr name="star_size" format="float" />
        <!-- the color of each valued star -->
        <attr name="star_value_color" format="reference|color" />
        <!-- the color of each star's background -->
        <attr name="star_base_color" format="reference|color" />
        <!-- the color of each star's background when pressing down -->
        <attr name="star_base_pressed_color" format="reference|color" />
        <!-- the background color -->
        <attr name="bg_color" format="reference|color" />
    </declare-styleable>
</resources>